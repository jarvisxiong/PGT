<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">


    <bean name="simpleJob" class="org.springframework.scheduling.quartz.JobDetailBean">
        <property name="jobClass" value="com.pgt.inventory.scheduling.InventoryReleaseJob" />
        <property name="jobDataAsMap">
            <map>
                <entry key="inventoryService" value-ref="inventoryService" />
            </map>
        </property>
    </bean>

</beans>